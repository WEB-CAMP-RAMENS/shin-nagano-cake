 <div class="container">
  <div class="row">
    <div class="col-md-4">
      
      <%= attachment_image_tag @item,:image, size:"255x210" %>

    </div>
    
    <div class="col-md-4">
      <span><%= @item.name %></span>
      <span><%= @item.introduction %></span>
      <span><%= @item.price %></span>
    </div>
      
      <%= form_with model:@item, url:cart_items_path, method: :post, local:true do |f|%>
      <%= f.select :amount, options_for_select((1..20).to_a), include_blank: "個数選択" %>
      <%= f.submit "カートに入れる" %>
      <% end %>
  </div>
</div>