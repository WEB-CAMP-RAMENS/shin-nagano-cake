<div class="container">
  <div class="row mb-2">
    <h4 class="mb-4 text-color col-3 text-center pt-4 rounded-pill">商品一覧(全<%= @items.count %>件)</h4>
  </div>
    <div class="row row-cols-1 row-cols-md-4 g-4">
      <% @items.each do |item| %>
        <div class="col-md-3">
          <div class="card mb-3">
            <%= link_to item_path(item) do %>
            <%= attachment_image_tag item,:image, size:"255x210", class:"card-img-top" %>
            <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text">
                <% tax_in = item.price * 1.10 %>
                <%= tax_in.round.to_s(:delimited) %>円(税込)</p>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

　　<div class="mx-auto" style="width: 200px;">
      <h4><%= paginate @items %></h4>
    </div>

</div>


