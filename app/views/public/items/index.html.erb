 <div class="container">
   <div class="row mb-2">

        <h4 class="mb-4 text-color col-3 text-center pt-4 rounded-pill">商品一覧(全<%= @items.count %>件)</h4>
        <div class="col-8 cart_image offset-1"></div>
    </div>
    <div class="row">
      <div class="col">
      </div>
    </div>
    
 <div class="row justify-content-center mt-3">
    <div class="col-10">
    <% @items.each do |item| %>
      <tr><%= link_to items_path(item.id) do %>
      <%= attachment_image_tag item, :image,class:'item_photo' %>
      <% end %>
      <td>商品名<%= item.name %></td>
      <td><%= item.price %></td>
      </tr>
    <% end %>
    

    <%= paginate @items %>
 </div>
