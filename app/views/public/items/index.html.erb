 <div class="container">
   <div class="row mb-2">

      <h4 class="mb-4 text-color col-3 text-center pt-4 rounded-pill">商品一覧(全<%= @items.count %>件)</h4>
      <div class="col-8 cart_image offset-1"></div>
    </div>

    <div class="row justify-content-center mt-3">
    <div class="col-10">
      
    <% @items.each do |item| %>
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item,:image, size:"255x210" %>
        <% end %>
      <td>商品名<%= item.name %></td>
      <td><%= item.price %></td>
      </tr>
    <% end %>
    

    <%= paginate @items %>
 </div>
