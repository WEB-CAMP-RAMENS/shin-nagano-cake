<div class="container">
  <div class="row">
    <div class="col-7 mb-3">
      <h4 class="mb-4 text-color col-4 text-center pb-2 pt-2 rounded-pill">会員情報編集</h4>

        <%= form_with model: @customer, url: customers_my_page_path, method: :patch, local:true do |f| %>



          <div class="field mb-1">
            <%= f.label :"名前　　　　　　　　　　", class: 'col-3' %>

            <%= f.text_field :last_name, autofocus: true %>
            <%= f.label :"　 　", class: '' %>
            <%= f.text_field :first_name, autofocus: true %>
          </div>

          <div class="field mb-1">
            <%= f.label :"フリガナ　　　　　　　　　", class: 'col-3' %>

            <%= f.text_field :last_name_kana, autofocus: true %>
            <%= f.label :"　  　", class: '' %>
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>

          <div class="field mb-1">
            <%= f.label :"メールアドレス", class: 'col-3' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field mb-1">
            <%= f.label :"郵便番号", class: 'col-3' %>
            <%= f.text_field :postal_code, autofocus: true %>
          </div>

          <div class="field mb-1">
            <%= f.label :"住所", class: 'col-3' %>
            <%= f.text_field :address, autofocus: true %>
          </div>

          <div class="field mb-2">
            <%= f.label :"電話番号", class: 'col-3' %>
            <%= f.text_field :telephone_number, autofocus: true %>
          </div>


          <div class="actions mb-3">
            <%= f.label :"　", class: 'col-3' %>
            <%= f.submit "編集内容を保存する", class: 'btn btn-primary col-3' %>
            <%= link_to '退会する', customers_unsubscribe_path, class:'btn btn-primary ml-5' %>
          </div>
        <% end %>
    </div>

    <div class="col-5 mypage_edit"></div>


  </div>
</div>