<div class="container mt-5">
  <div class="row"><h3 class="under px-4 mb-5">注文履歴一覧</h3></div>
    <div class="col">
          <table class="table table-bordered border-secondary">
            <thead class="thead-secondary">
              <tr><th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th>
            </thead>
            <tbody>
            <% @orders.each do |order| %>
                <td><%= order.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
                <td><%= order.address %></td>
                <td>
                  <% order.order_items.each do |order_item| %>
                    <%= order_item.product.title %><br>
                  <% end %>
                </td>
                <td>¥<%= order.amount.to_s(:delimited) %></td>
                <td><%= order.status %></td>
                <th><%= link_to "詳細", order_path(order), class: "btn btn-outline-primary mr-1" %></th>
              </tbody>
            <% end %>
          </table>
          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
  <div class="container p-5">
  </div>
</div>