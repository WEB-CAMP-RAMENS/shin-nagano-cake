<div class="container mt-5">
  <div class="row"><h3 class="under px-4 mb-5">注文情報確認</h3></div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered border-secondary ">
        <thead class="table-secondary">
          <tr><th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th></tr>
        </thead>
        <tbody>
         <% @cart_items.each do |cart_item| %>
           <tr>
              <td><%= attachment_image_tag cart_item.item, :image, format: "jpeg", fallback: "no_image.jpg", size: "80x60",class:"mr-3" %><%= cart_item.item.name %></td>
              <td class="align-middle"><%= cart_item.item.add_tax_price.round.to_s(:delimited) %>円</td>
              <td class="align-middle"><%= cart_item.amount %></td>
              <td class="align-middle"><%= (cart_item.item.add_tax_price * cart_item.amount).round.to_s(:delimited) %>円</td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-3 billing">
      <table class="table table-bordered border-primary">
        <tr><td class="font-weight-bold table-secondary">配送料</td><td><%= @postage %>円</td></tr>
        <tr>
         <td class="font-weight-bold table-secondary">商品合計</td>
         <td>
          <%#= @cart_items.map { |cart_item| cart_item.subtotal }.sum %>
          <%# totalprice = @cart_items.map { |cart_item| cart_item.subtotal }.sum %>
          <%= @total.round.to_s(:delimited) %>円
         </td>
        </tr>
        <tr>
          <td class="font-weight-bold table-secondary">請求金額</td>
          <td>
            <%# @total_payment = @postage + @sum %>
            <%#= @total_payment %>
            <%= (@total.round. + @postage ).to_s(:delimited) %>円
          </td>
        </tr>
      </table>
    </div>
 </div>

  <div class="row">

      <table class="table table-borderless">
        <tr>
          <th  class="info" style="width: 20%">支払方法</th>
          <td class="text-left">
            <%= @order.payment_method %>
          </td>
        </tr>
        <tr>
          <th  class="info" style="width: 20%">お届け先</th>
          <td class="text-left">
            〒<%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
      </table>
  </div>

  <div class="button">
        <%= form_with model: @order, method: :post, url: orders_path, local:true do |f| %>
         <%= f.hidden_field :postal_code,value: @order.postal_code %>
         <%= f.hidden_field :address,value: @order.address %>
         <%= f.hidden_field :name,value: @order.name %>
         <%= f.hidden_field :total_payment,value: @order.total_payment %>
        <%= f.submit "注文を確定する", class: "btn btn-lg btn-success" %>
        <% end %>
  </div>


