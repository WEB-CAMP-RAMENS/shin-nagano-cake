<div class="container">
  <div class="row">
    <div class="col-md-12">


<h2 class="mb-5 text-color col-3 text-center">新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

<div class="sign_up-pages col-12">
 <div class="field mb-1">
  <%= f.label :"名前          (姓)", class: 'col-3' %>
  <%= f.text_field :last_name, autofocus: true %>
  <%= f.label :"　(名)　    ", class: '' %>
  <%= f.text_field :first_name, autofocus: true %>
 </div>

 <div class="field mb-1">
  <%= f.label :"フリガナ　(ｾｲ)", class: 'col-3' %>
  <%= f.text_field :last_name_kana, autofocus: true %>
  <%= f.label :"　(ﾒｲ)　    ", class: '' %>
  <%= f.text_field :first_name_kana, autofocus: true %>
 </div>

 <div class="field mb-1">
  <%= f.label :"メールアドレス", class: 'col-3' %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
 </div>

 <div class="field mb-1">
  <%= f.label :"郵便番号(ハイフンなし)", class: 'col-3' %>
  <%= f.text_field :postal_code, autofocus: true %>
 </div>

 <div class="field mb-1">
  <%= f.label :"住所", class: 'col-3' %>
  <%= f.text_field :address, autofocus: true %>
 </div>

 <div class="field mb-1">
  <%= f.label :"電話番号(ハイフンなし)", class: 'col-3' %>
  <%= f.text_field :telephone_number, autofocus: true %>
 </div>

  <div class="field mb-1">
    <%= f.label :"パスワード(6文字以上)", class: 'col-3' %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field md-1">
    <%= f.label :"パスワード(確認用)", class: 'col-3' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.label :"　", class: 'col-3' %>
    <%= f.submit "新規登録", class: 'btn btn-outline-dark col-2' %>
  </div>
 </div>
<% end %>

<h4 class="mt-5 mb-4 login-color col-4 text-center">既に登録済みの方</h4>
<div class="ml-5">
 <p><%= link_to "こちら", new_customer_session_path, class: 'text-decolation' %>からログインしてください。</p>
</div>

    </div>
  </div>
</div>