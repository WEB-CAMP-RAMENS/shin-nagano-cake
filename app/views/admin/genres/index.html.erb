<div class='container'>
  <div class='row'>
    <div class='col-md-4 offset-md-1'>
      <h2><span class="badge badge-secondary">ジャンル一覧</span></h2>
        <%= form_with model: @genre, url:admin_genres_path,remote:true do |f| %>
        <div class="form-group">
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, class: 'form-control name' %>
        </div>
          <%= f.submit "新規登録" ,class: 'btn btn-success'%>
        <% end %>
    </div>
  </div>
</div>
<p></p>
<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <%= render 'index', genres: @genres, genre: @genre %>
    </div>
  </div>
</div>
