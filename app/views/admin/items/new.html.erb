<div class="container">
  <div class="row">
    <p class="mt-4 fs-2 bg-light col-2 text-center">商品新規登録</p>
  </div>
  <div class="row">
    <div class="col offset-2">
      <%= form_with model: @item, url:admin_items_path, local:true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr class="mb-3">
              <td class="text-center "><%= f.label :image, "商品画像" %></td>
              <td><%= f.attachment_field :image %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :name, "商品名" %></td>
              <td><%= f.text_field :name, size: 30, placeholder: "商品名" %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :introduction, "商品説明" %></td>
              <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :genre, "ジャンル" %></td>
              <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :price, "税抜価格" %></td>
              <td><%= f.text_field :price, placeholder: "1000" %>円</td>
            </tr>
            <tr class="mb-3">
              <td class="text-center">販売ステータス</td>
              <td>
                <%= f.radio_button :is_active, 'true' %>
                <%= f.label :is_active_sale, "販売中", value: "true" %>
                <%= f.radio_button :is_active, 'false' %>
                <%= f.label :is_active_not_sale, "販売停止中", value: "false" %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit '新規登録', class: "btn btn-outline-dark mb-3 offset-1" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>