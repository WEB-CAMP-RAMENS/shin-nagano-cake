      <h1>商品編集</h1>

   <%= form_with model: @item, url:admin_item_path, local:true do |f| %>
     <div class="form-inline">
        <div class="form-group">
         <label>商品画像</label>
          <%=  f.attachment_field :image %>
        </div>
        <div class="form-group">
         <label>商品名</label>
         <%= f.text_field :name, :class => "form-control" %>
        </div>
         <div class="form-group">
         <label>商品説明</label>
         <%= f.text_area :introduction, :class => "form-control" ,:size => "27x5" %>
        </div>
  
        <div class="form-group">
         <label>ジャンル</label>
         <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "選択して下さい") %>
        </div>
        <div class="form-group">
         <label>税抜価格</label>
         <%= f.text_field :price, :class => "form-control edit-form" %>円
        </div>
        <div class="form-group">
          <label>販売ステータス</label>
          <%= f.label :is_active_sale, '販売中' %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active_not_sale, '販売停止中' %>
          <%= f.radio_button :is_active, :false %>
          </div>
         <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
     </div>
   <% end %>