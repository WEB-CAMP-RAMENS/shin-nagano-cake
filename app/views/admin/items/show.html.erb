<div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">

      </div>
      <div class="col-md-8 offset-md-1">
         <h1>商品詳細</h1>

        <table class="table">
         <thead>
          <tr>
              <th>商品説明</th>
              <th>商品名</th>
              <th>ジャンル</th>
              <th>税込価格</th>
              <th>販売ステータス</th>
              <th></th>
               <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          </tr>
         </thead>

          <tbody>
           <tr>
              <td><%= @item.name %></td>
              <td><%= @item.introduction %></td>
              <td><%= @genre.name  %></td>
              <td><%= @item.price %></td>
              <% if @item.is_active == true %>
              <td>販売中</td>
              <% elsif @item.is_active == false %>
              <td>販売停止中</td>
              <% end %>
              <td></td>

              <td><%= link_to '編集', edit_admin_item_path(@item),  class: "btn btn-sm btn-success" %></td>
              <td><%= link_to '削除',admin_item_path(@item) ,method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
           </tr>
        </table>
       </div>
     </div>
  </div>
