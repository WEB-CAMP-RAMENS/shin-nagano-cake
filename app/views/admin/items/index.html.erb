
   <div class="container px-5 px-sm-0">
     <div class="row">
        <h1>商品一覧</h1>
      <div class="col-md-3">

      </div>
      <div class="col-md-8 offset-md-1">

        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>商品説明</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
              <th><%= link_to new_admin_item_path do %>
                <i class="fas fa-plus-square"></i>
              <% end %>
              </th>
              <th colspan="3"></th>
            </tr>
          </thead>
            <tbody>
              <% @items.each do |item| %>
              <tr>
                <td></td>
                <td><%= link_to item.name, admin_item_path(item) %></td>
                <td><%= item.introduction %></td>
                <td><%= item.price %></td>
                <td><%= item.genre_id %></td>
                <td></td>
              </tr>
              <% end %>
                </tbody>
                </table>

              <br>

       </div>
     </div>
   </div>