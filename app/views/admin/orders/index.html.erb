 <div class="container px-5 px-sm-0">
     <div class="row">
        <h1>注文履歴一覧</h1>
      <div class="col-md-3">
      </div>
      <div class="col-md-8 offset-md-1">
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>販売ステータス</th>
              <th colspan="3"></th>
            </tr>
          </thead>
            <tbody>
              <% @orders.each do || %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item) %></td>
                <td><%= item.introduction %></td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                  <% if item.is_active == true %>
                <td>販売中</td>
                  <% elsif item.is_active == false %>
                <td>販売停止中</td>
                  <% end %>
              </tr>
              <% end %>
            </tbody>
        </table>
       </div>
     </div>
   </div>
   